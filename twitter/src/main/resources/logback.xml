<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="nl.capgemini.events.bldtc_2021.twitter.ConsumerProducer" level="debug"/>
    <!--    <logger name="nl.capgemini.events.bldtc_2021.twitter.tweet.TweetConsumer" level="debug"/>-->
    <!--    <logger name="nl.capgemini.events.bldtc_2021.twitter.user.UserConsumer" level="debug"/>-->
    <logger name="io.github.redouane59.twitter.dto.tweet.TweetV2" level="OFF"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
